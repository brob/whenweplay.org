---
import background from "../assets/background.svg";
import '../styles/global.css';

const {title, description} = Astro.props
const { frontmatter } = Astro.props;

console.log(description);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/meeple.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title || "When We Play"} />
    {description && <meta property="og:description" content={description} />}
     <meta name="description" content={description} />
    <meta property="og:site_name" content="When We Play" />
    <meta property="og:image" content={new URL('/meeple.svg', Astro.url)} />

    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    {description && <meta property="twitter:description" content={description} />}
    <meta property="twitter:image" content={new URL('/meeple.svg', Astro.url)}  /> 


    <title>{title} When We Play</title>
  </head>
  <body>
    <div id="container">
      <img id="background" src={background.src} alt="" fetchpriority="high" />
      <main>
        <main>
          <section id="hero">
            <div class="md:grid items-start md:grid-cols-[1fr_2fr] gap-10 relative">
              <div class="top-0 md:sticky">
              <div class="logo-text text-7xl md:text-9xl">
                <a href="/">When We Play</a>
              </div>
              <a href="/blog" class="text-2xl text-green-700 font-bold">Blog</a>
            </div>
              <div>
                <slot />
              </div>
            </div>
          </section>
        </main>
      </main>
    </div>
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>

</html>
