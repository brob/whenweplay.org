---
// Props
const { available } = Astro.props;

// Styles
const badgeStyle = available
    ? "border border-green-500 text-green-500"
    : "border border-red-500 text-red-500";
const icon = available
    ? "✅" // Available icon
    : "❌"; // Checked out icon
---
<div class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${badgeStyle}`}>
    <span class="mr-2">{icon}</span>
    <span>{available ? "Available" : "Checked Out"}</span>
</div>