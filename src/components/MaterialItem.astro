---
import Availability from "./Availability.astro";
import SanityImage from "./SanityImage.astro";


const { material } = Astro.props;
const { name, tagline, slug, available, boxArt } = material.data;
---

<li class="text-center">
    <a href={`/materials/${slug}`}>
    {boxArt?.asset ? (
        <SanityImage image={boxArt} alt={name} width={400} className="w-full object-contain object-center h-[20rem] block" />
    ) : (
        <svg
            class="w-full object-contain object-center h-[20rem] block"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="3" y1="3" x2="21" y2="21"></line>
        </svg>
    )}
    <div>{name}</div>
    <Availability available={available} />
    </a>
</li>
